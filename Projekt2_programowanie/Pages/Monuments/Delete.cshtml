@page
@model Projekt2_programowanie.Pages.Monuments.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<h3>Are you sure you want to delete this monument?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label @Html.DisplayNameFor(model => model.Monument.MonumentName)>Monument Name: </label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monument.MonumentName)
        </dd>
        <dt class="col-sm-2">
           <label @Html.DisplayNameFor(model => model.Monument.MonumentDescription)>Monument Description: </label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monument.MonumentDescription)
        </dd>
        <dt class="col-sm-2">
           <label @Html.DisplayNameFor(model => model.Monument.Image)>Image: </label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monument.Image)
        </dd>
        <dt class="col-sm-2">
           <label @Html.DisplayNameFor(model => model.Monument.Country)>Country: </label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monument.Country)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Monument.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
